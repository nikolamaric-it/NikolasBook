<header class="navbar-fixed">
    <nav class="brown">
        <div class="container nav-wrapper">
            <%= link_to "Nikola's Books", root_path, class: "brand-logo" %>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <% if user_signed_in? %>
                    <% if current_user.id == 1 %>
                        <li><%= link_to 'Vendi Contenuto', new_content_path %></li>
                    <% end %>
                    <ul id="dropdown1" class="dropdown-content">
                        <li><%= link_to 'Dashboard', dashboard_path, class: "deep-orange-text darken-4" %></li>
                        <li><%= link_to 'Impostazioni', edit_user_registration_path, class: "deep-orange-text darken-4" %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Esci", destroy_user_session_path, method: :delete, class: "deep-orange-text darken-4" %></li>
                    </ul>
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
                <% else %>
                    <li><%= link_to "Accedi", new_user_session_path %></li>
                    <li><%= link_to "Registrati", new_user_registration_path %></li>
                <% end %>
                    
            </ul>
        </div>
    </nav>
</header>

<ul class="sidenav" id="mobile-demo">
    <% if user_signed_in? %>
        <% if current_user.id == 1 %>
            <li><%= link_to 'Vendi Contenuto', new_content_path %></li>
        <% end %>
        <li><%= link_to 'Dashboard', dashboard_path %></li>
        <li><%= link_to 'Impostazioni', edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to "Esci", destroy_user_session_path, method: :delete %></li>
    <% else %>
        <li><%= link_to "Accedi", new_user_session_path %></li>
        <li><%= link_to "Registrati", new_user_registration_path %></li>
    <% end %>
</ul>

